/// Path usado no app:
/// - events_map/{eventId}

match /events_map/{eventId} {
  // Qualquer um autenticado pode ler eventos no mapa
  allow read: if isSignedIn();
  
  // Escrita SOMENTE via Cloud Function (syncEventToMap)
  // O app nunca escreve diretamente aqui
  allow write: if false;
}

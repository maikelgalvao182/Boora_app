/// 游끥 Cole칞칚o de ranking de usu치rios
/// Path usado no app:
/// - userRanking/{userId}
///   - userId: string
///   - fullName: string
///   - photoUrl: string (nullable)
///   - totalEventsCreated: number
///   - lastEventAt: timestamp
///   - lastLat: number
///   - lastLng: number
///   - updatedAt: timestamp

match /userRanking/{userId} {
  // Qualquer usu치rio autenticado pode ler rankings
  allow read: if isSignedIn();
  
  // Apenas Cloud Functions podem criar/atualizar rankings
  allow write: if false;
}

/// 游끥 Cole칞칚o de ranking de locais
/// Path usado no app:
/// - locationRanking/{placeId}
///   - placeId: string
///   - locationName: string
///   - formattedAddress: string
///   - totalEventsHosted: number
///   - lastEventAt: timestamp
///   - lastLat: number
///   - lastLng: number
///   - updatedAt: timestamp

match /locationRanking/{placeId} {
  // Qualquer usu치rio autenticado pode ler rankings
  allow read: if isSignedIn();
  
  // Apenas Cloud Functions podem criar/atualizar rankings
  allow write: if false;
}

/// 游빛 Filtros agregados do ranking
/// Path usado no app:
/// - ranking_filters/current
///   - states: array<string>
///   - cities: array<string>
///   - citiesByState: map<string, array<string>>
///   - updatedAt: timestamp

match /ranking_filters/{docId} {
  // Qualquer usu치rio autenticado pode ler filtros
  allow read: if isSignedIn();

  // Apenas Cloud Functions podem escrever
  allow write: if false;
}
